import { Component, PropTypes } from 'react';

class HeartBeat extends Component {

  componentWillMount() {
    const { interval, keepAlive, userId } = this.props;

    setInterval(() => {
      keepAlive(userId);
    }, interval);
  }

  render() {
    return null;
  }

}

HeartBeat.propTypes = {
  userId: PropTypes.string.isRequired,
  keepAlive: PropTypes.func.isRequired,
  interval: PropTypes.number
};

HeartBeat.defaultProps = {
  interval: 1000 * 60 * 5
};

export default HeartBeat;
