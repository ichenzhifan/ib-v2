import React, { Component, PropTypes } from 'react';
import './index.scss';


class SortAndFilter extends Component{
  constructor(props){
    super(props);

      this.state = {
        value: 'byUploadTime'
      }

  }

  handleOptionChange(event){
    const value = event.target.value;
    console.log(value,"was selected");
    this.setState({value: value});
    const { boundUploadedImagesActions } = this.props;
    boundUploadedImagesActions.sortImage(value);
  }

  handleHideUsedToggle(){
    //
  }

    render(){

      const { uploadedImages } = this.props;

      return(
        <div className="upload-hide">
          <div className="t-left">
            <select className="upload-time" value={this.state.value} onChange={this.handleOptionChange.bind(this)} >
              <option value="uploadTime" >Sort By Upload Time</option>
              <option value="createTime" >Sort By Creation Time</option>
              <option value="name" >Sort By Image Title</option>
            </select>

          </div>
          <div className="t-right">
            <input type="checkbox" id="hideUsed" onChange={this.handleHideUsedToggle.bind(this)} /><label htmlFor="hideUsed" className="hide-used">Hide Used</label>
          </div>
        </div>

        );
    }
}

