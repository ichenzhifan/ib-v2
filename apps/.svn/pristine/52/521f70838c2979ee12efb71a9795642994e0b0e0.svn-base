$boxWidth: 655px;
$boxHeight: 460px;
$boxPadding: 40px;
$closeTop : 15px;
$closeRight : 15px;
$titleSize : 23px;
$contentSize : 14px;
.upload-modal{
  width: $boxWidth;
  height: $boxHeight;
  .box-image-upload{
    width: $boxWidth;
    height: $boxHeight;
    background: #fff;
    top: 50%;
    left: 50%;
    padding: $boxPadding;
    box-sizing: border-box;
    position: fixed;
    font-size: $contentSize;
    transform : translate(-50%,-50%);
    .close{
      top: $closeTop;
      right: $closeRight;
      position: absolute;
    }
    h3{
      padding: 0;
      margin: 0;
      &.title{
        font-size: $titleSize;
        font-weight: 400;
      }
    }
    .box-list{
      height: 220px;
      overflow: auto;
    }
    ul{
      list-style-type: none;
      padding: 0;
      margin: 0;
      &.upload-title{
        margin-top: 25px;
      }
      &.upload-list,&.upload-title{
        li{
          height: 36px;
          line-height: 36px;
          margin-bottom: 8px;
          .file-name{
            float: left;
            width: 20%;
            background:#f5f5f5;
            margin-right: 8px;
            padding-left: 10px;
            box-sizing: border-box;
          }
          .file-progress{
            float: left;
            width: 78%;
            background:#f5f5f5;
            padding-left: 10px;
            position: relative;
            box-sizing: border-box;
            .progress-c{
              display: inline-block;
              position: relative;
              height: 10px;
              width: 360px;
              margin-right: 15px;
              border-radius: 5px;
              background: #fff;
              .progress{
                position: absolute;
                height: 100%;
                top: 0;
                left: 0;
                width: 20%;
                border-radius: 5px;
                background: #393939;
              }
            }
            .status{
              font-size: 12px;
            }
            .delete{
              display: none;
              position: absolute;
              right: 18px;
              a{
                vertical-align: middle;
              }
            }
            .retry{
              display: none;
              position: absolute;
              right: 5px;
              text-decoration: none;
              color: #000;
              font-size: 12px;
            }
          }
          &.upload-title{
            .file-name,.file-progress{
              background: #fff;
            }
          }
        }
      }
    }
    .upload-meta{
      margin-top: 20px;
      .upload-info{
        float: left;
        line-height: 40px;
        .failed{
          margin-left: 15px;
          color: #ff792b;
        }
      }
      .upload-buttons{
        float: right;
        button{
          cursor: pointer;
          border: none;
          width: 160px;
          height: 40px;
          outline: none;
          line-height: 38px;
          box-sizing: border-box;
          &.white{
            background: #fff;
            border: 1px solid #cbcbcb;
          }
          &.black{
            background: #393939;
            color: #fff;
            &:hover{
              background: #000;
            }
          }
          &.cancel-all{
            margin-left: 10px;
          }
        }
      }
    }
  }
}
