.font-normal{
  font-family: "Gotham SSm A", "Gotham SSm B", Arial;
  font-weight: 400;
}
.upload-hide{
  width: 324px;
  height: 20px;
  line-height: 20px;
  margin: 8px auto 24px;
  .t-left{
    float: left;
    margin-left: 2px;
  }
  .t-right{
    float: left;
    height: 20px;
    line-height: 20px;
    margin-left: 24px;
  }
  .upload-time{
    float: left;
    width: 194px;
    height: 20px;
    border-radius: 4px;
    padding-left: 6px;
    outline: none;
    font-size: 12px;
    color: #7b7b7b;
    word-spacing: 2px;

  }
  .sort{
    float: left;
    margin-left: 2px;
    height: 17px;
    width: 17px;
    border-radius: 3px;
    border: 1px solid #999;
    background: url("./path.png") no-repeat 5px 2px;
    background-size: 8px;
    &:hover{
    cursor: pointer;
    }
  }
  #hideUsed{
    float: left;
    height: 20px;
    background: #fff;
  }
  .hide-used{
    display: inline-block;
    padding-left: 4px;
    color: #7b7b7b;
    font-size: 13px;
    @extend .font-normal;
    &:hover{
      cursor: pointer;
      color:#000;
    }
  }

}

