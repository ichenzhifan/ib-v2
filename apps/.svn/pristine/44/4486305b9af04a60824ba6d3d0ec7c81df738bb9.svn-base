$width: 680px;
$height: 360px;
$padding: 40px;
.texteditor-modal{
  width: $width;
  height: $height;
  padding: $padding;
  h3{
    padding: 0;
    margin: 0;
    &.title{
      font-size: 26px;
      font-weight: normal;
    }
  }
  .editor{
    margin-top: 55px;
    .disabled{
      opacity: 0.4;
      pointer-events: none;
    }
    .row{
      width: 100%;
      height: 50px;
      margin: 10px 0;
      &.buttons{
        text-align: center;
        margin-top: 30px;
      }
      .col{
        // height: 50px;
        // line-height: 50px;
        margin-top: 10px;
        label{
          float: left;
          line-height: 35px;
          margin-right: 15px;
          width: 24%;
          &.right{
            margin-left: 8px;
            margin-right: 7px;
          }
          &.label{
            width: 100%;
          }
        }
        .Select{
          float: left;
          width: 71%;
        }
      }
      .col-2{
        float: left;
        width: 50%;

      }
    }
  }
  .Select-control{
    height: 35px;
    line-height: 35px;
  }
  .Select-clear-zone{
    display: none;
  }
  .Select-menu-outer img{
    height: 20px;
  }
}
