.font-normal{
     font-family: "Gotham SSm A", "Gotham SSm B", Arial;
     font-weight: 400;
}

.upload-button{
    @extend .font-normal;
    position: relative;
    text-align: center;
    display: block;
    width: 324px;
    margin: 18px auto 0;
    height: 32px;
    line-height: 32px;
    background: #393939;
    color: #fff;
    text-decoration: none;
    font-size: 14px;
    text-decoration: none;
    &:hover{
    background: #000;
    }
    input{
        position: absolute;
        left: 0;
        top: 0;
        width: 324px;
        height: 32px;
        opacity: 0;
    }
}

