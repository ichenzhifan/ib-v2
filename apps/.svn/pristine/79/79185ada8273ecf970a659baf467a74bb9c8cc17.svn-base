import React, { Component, PropTypes } from 'react';
import classNames from 'classnames';
import './index.scss';


class ImageItem extends Component{
  constructor(props){
    super(props)
  }

  render() {
    const { imageObj } = this.props;
    const { name, url } = imageObj;
    const src = [url,'&rendersize=fit140'].join('');
    return (
      <div className="image-item">
        <div className="loaded-image">
          <img
            className="preview-image"
            src={src}
          />
          <div className="icon-count">
            <span>1</span>
          </div>
          <div className="icon-delete"></div>
        </div>
        <div
          className="preview-image-tip"
          title={name}>
          {
            name.length > 15
            ? name.substr(0,5) + "..." + name.substr(name.length-6)
            : name
          }
        </div>
      </div>
    );
  }
}

ImageItem.propTypes = {


}

export default ImageItem;
