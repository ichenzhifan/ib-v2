import { SAVE_TEXT_OPTIONS, UPDATE_TEXT_POSITION } from '../contants/actionTypes';
import { makeId } from '../../../common/utils/math';

const textOptions = (state = [], action) => {
  switch (action.type) {
    //保存文字options
    case SAVE_TEXT_OPTIONS: {
      return [
        ...state,
        {
          text: action.text,
          fontFamily: action.fontStyle,
          fontSize: action.fontSize,
          fontColor: action.fontColor,
          left: 50,
          top: 50,
          id: makeId('text')
        }
      ];
    }
    case UPDATE_TEXT_POSITION: {
      const index = state.findIndex(item=>{
        return item.id = action.id;
      })
    }
    default:
      return state;
  }
};

export default textOptions;
