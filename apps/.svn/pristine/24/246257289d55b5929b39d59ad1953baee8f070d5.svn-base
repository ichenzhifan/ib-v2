$height: 40px;
.item-price{
  width: 100%;
  margin-top: 50px;
  height: $height;
  line-height: $height;
  text-align: right;
  span{
    display: inline-block;
  }
  .label{
    font-size: 12px;
    color: #7b7b7b;
    margin-right: 6px;
  }
  .price{
    font-size: 14px;
    font-weight: bold;
    color: #3a3a3a;
    margin-right: 8px;
  }
  img{
    margin-right: 40px;
    vertical-align: middle;
  }
}
