import React, { Component } from 'react';
import { translate } from "react-translate";
import './index.scss';

class WorkSpace extends Component {
  constructor(props) {
    super(props);
  }

  render() {
    // t方法是用于本地化, 通过传入的key, 来获取对应的value.
    const { children, t } = this.props;
    return (
      <section className="work-space">
        {children}
        <div className="btn-list">
          <input type="button" className="btn" value={t('ADD_TEXT')}/>
        </div>
        <div className="image-editor">
          {t('COUNT', { n: 10 })}
        </div>
        <div className="btn-list">
          <input type="button" className="btn" value={t('OUTSIDE')} />
          <input type="button" className="btn" value={t('INSIDE')} />
        </div>
      </section>
    );
  }
}

// 要导出的一个translate模块.
// - 第一个括号里的参数对应的是资源文件中定义的.
// - 第一个括号里的参数对应的是你要导出的组件名.
export default translate('WorkSpace')(WorkSpace);
