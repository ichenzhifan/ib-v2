import React, { Component } from 'react';
import { get } from 'lodash';

import './index.scss';

export default class SideBar extends Component {
  constructor(props) {
    super(props);

    this.state = {
      selectedSize: null
    };
  }

  onOptionChange (sizeId) {
    console.log(sizeId);
  }

  render() {
    const { spec } = this.props;

    let boxSizeArray = null;
    if (spec.optionGroup) {
      boxSizeArray = spec.optionGroup.size;
    }


    return (
      <aside className="side-bar">
        <p>side bar</p>
        <hr />
        <hr />
        <div className="div-hr"></div>
        <div>Size</div>
        
        {
          boxSizeArray
          ? boxSizeArray.map((sizeObj, index) => {
            const objId = `size-${sizeObj.id}`;
            return (
              <div key={index}>
                <label htmlFor={objId}>{sizeObj.name}</label>
                <input id={objId} type="radio" name="size" value={sizeObj.id} onChange={this.onOptionChange.bind(this, sizeObj.id)} />
              </div>
            )
          })
          : null
        }
      </aside>
    );
  }
}
